{
  "name": "bmcp-monorepo",
  "version": "1.0.0",
  "description": "Bitcoin Multichain Protocol - x402 cross-chain messaging from Bitcoin to EVM chains via CCIP",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "lint": "npm run lint --workspaces",
    "format": "prettier --write \"packages/**/src/**/*.ts\" \"packages/**/contracts/**/*.sol\"",
    "clean": "npm run clean --workspaces && rm -rf node_modules",
    "compile:contracts": "npm run compile -w @bmcp/contracts",
    "deploy:contracts": "npm run deploy -w @bmcp/contracts",
    "start:relayer": "npm run start -w @bmcp/relayer"
  },
  "keywords": [
    "bitcoin",
    "ccip",
    "cross-chain",
    "chainlink",
    "monorepo",
    "evm",
    "multichain"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "eslint": "^8.56.0",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
